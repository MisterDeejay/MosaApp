<div class="container-fluid" id="app-view">
  <div class="row">
    <div class="restaurant-slider col-xs-4 sidebar">
      <form id="reorder" action="index.html" method="post">
        <ul id="sort-by">
          <h4 class="text-center">Sort By</h4>

          <div class="row">
            <div class="col-xs-6">
              <li>
                <a class="sort" id="distance" href="#">Distance</a>
              </li>
            </div>

            <div class="col-xs-6">
              <li>
                <a class="sort" id="rating" href="#">Highest Rated</a>
              </li>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              <li>
                <a class="sort" id="low-price" href="#">Lowest Bottomless Price</a>
